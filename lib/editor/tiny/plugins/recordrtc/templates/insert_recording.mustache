{{!
    @template tiny_recordrtc/insert_recording

    Insert recording template.

    Example context (json):
    {

    }
}}
<div class="{{PLUGINNAME}} container-fluid">
    <div class="{{bsrow}} hide">
        <div class="{{bscol}}12">
            <div id="alert-danger" class="alert {{bsaldang}}">
                <strong>
                    {{#str}} insecurealerttitle, tiny_recordrtc {{/str}}
                </strong>
                {{#str}} insecurealert, tiny_recordrtc {{/str}}
            </div>
        </div>
    </div>
    <div class="{{bsrow}} hide">
        {{#isaudio}}
            <div class="{{bscol}}1"></div>
            <div class="{{bscol}}10">
                <audio id="player"></audio>
            </div>
            <div class="{{bscol}}1"></div>
        {{/isaudio}}
        {{^isaudio}}
            <div class="{{bscol}}12">
                <video id="player"></video>
            </div>
        {{/isaudio}}
    </div>
    <div class="{{bsrow}}">
        <div class="{{bscol}}1"></div>
        <div class="{{bscol}}10">
            <button id="start-stop" class="{{bsssbtn}}">
                {{#str}} startrecording, tiny_recordrtc {{/str}}
            </button>
        </div>
        <div class="{{bscol}}1"></div>
    </div>
    <div class="{{bsrow}} hide">
        <div class="{{bscol}}3"></div>
        <div class="{{bscol}}6">
            <button id="upload" class="btn btn-primary btn-block">
                {{#str}} attachrecording, tiny_recordrtc {{/str}}
            </button>
        </div>
        <div class="{{bscol}}3"></div>
    </div>
</div>
